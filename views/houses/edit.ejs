<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center">Edit <%= house.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/houses/<%= house._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="house[name]" value="<%= house.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="house[image]" value="<%= house.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="house[price]" value="<%= house.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="house[description]" value="<%= house.description %>">
				</div>
				<div class="form-group">
					<label for="location">Location</label>
					<input class="form-control" type="text" name="location" id="location" value="<%= house.location %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>	
				</div>
			</form>	
			<a href="/houses">Go Back</a>	
		</div>
	</div>	

	
<%- include("../partials/footer") %>