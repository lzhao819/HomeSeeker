<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
			 <div class="container">
				 <h1>Welcome To HomeSeeker!!</h1>
				 <p>View our hand-picked houses near USC</p>
				 <p>
					<a class="btn btn-primary btn-lg" href="/houses/new">Add New House</a>
				 </p>
			 </div>
	</header>
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% houses.forEach(function(house){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= house.image %>">
			</div>
			<div class="caption">
				<h4><%= house.name %></h4>
			</div>
			<p>
				<a href="/houses/<%= house._id %>" class="btn btn-primary">More Info</a>
            </p>
		</div>
	 <% }); %>
	</div>
</div>

<%- include("../partials/footer") %>